<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#d4d3d3"
    tools:context="com.jacksonjao.jhon.who.Ranking">


    <ImageView
        android:layout_width="270dp"
        android:layout_height="120dp"
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo"
        android:layout_marginTop="60dp"
        />

    <TextView
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="Pos   User                      Tiempo"
android:textColor="#fff"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        android:paddingLeft="20dp"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/scrollView"
        android:textSize="16dp"
        />

    <ScrollView
        android:orientation="vertical"
        android:layout_width="270dp"
        android:layout_height="250dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:scrollbarThumbVertical="@drawable/scroll_color"
        android:scrollIndicators="right"
        android:background="@drawable/scroll_color_espacio"
        android:elevation="6dp"

        android:id="@+id/scrollView">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_ranking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="...Cargando lista"
        android:textSize="16dp"
        android:layout_marginTop="10dp"

        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"

        android:layout_marginRight="60dp"
        />


    <TextView
        android:id="@+id/tv_ranking_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="20dp"

        />



</RelativeLayout>




    </ScrollView>


    <TextView
        android:id="@+id/tv_tiempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00:000"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:textStyle="bold"
        android:textColor="#ff1f5f"
        android:textSize="24dp"
        />

</RelativeLayout>
