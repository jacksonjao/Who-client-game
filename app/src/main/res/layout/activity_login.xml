<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#d4d3d3"
    android:orientation="vertical"
    tools:context="com.jacksonjao.jhon.who.Ip"

    >


    <ImageView
        android:layout_width="270dp"
        android:layout_height="120dp"
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo"
        android:layout_marginTop="60dp"
        />




    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:hint="Usuario"
        android:textColor="#FF8B8686"
        android:textColorHint="#FF8B8686"
        android:background="@drawable/boton_texto"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:id="@+id/et_email"
        android:layout_below="@id/imageView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:hint="ContraseÃ±a"
        android:textColor="#FF8B8686"
        android:layout_below="@id/et_email"
        android:textColorHint="#FF8B8686"
        android:background="@drawable/boton_texto"
        android:textAlignment="center"
        android:id="@+id/et_id"
        android:layout_marginTop="20dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword" />


    <Button
        android:onClick="entrar"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:text="Inicio"
        android:id="@+id/btn_enter"
        android:layout_marginTop="20dp"
        android:translationZ="5dp"
        android:textAlignment="center"
        android:background="@drawable/boton"
        android:layout_below="@+id/et_id"
        android:textColor="#fefefe"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Registrarse"
        android:id="@+id/textView"
        android:layout_below="@id/btn_enter"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="registrate"
        android:textColor="#ff1f5f" />




</RelativeLayout>

